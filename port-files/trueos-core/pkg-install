#!/bin/sh
# Script to run the service management script and other post-install stuff

PREFIX=${PKG_PREFIX-/usr/local}

if [ "$2" != "POST-INSTALL" ] ; then
   exit 0
fi

set +e

# If this is during staging, we can skip for now
echo $PREFIX | grep -q '/stage/'
if [ $? -eq 0 ] ; then
   exit 0
fi

# Run the service validation routine to ensure the system services are sane
${PREFIX}/share/trueos/scripts/validate-services.sh ${PREFIX}/etc/trueos/required-services-core ${PREFIX}/etc/trueos/recommended-services-core

exit 0
